{
  "name": "zrx-link",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "bun-types": "latest",
    "concurrently": "^8.2.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "backend:dev": "cd backend && bun run dev",
    "frontend:dev": "cd frontend && bun run dev",
    "dev": "concurrently -n backend,frontend -c blue,green \"bun:backend:dev\" \"bun:frontend:dev\""
  }
}